<% content_for(:page_title, '修改密码') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="col-md-9 col-md-offset-1">
                    <%= form_tag(sessions_update_password_path, method: :put, class: 'form-horizontal', role: 'form', id: 'change_password_form') do%>
                        <div class="form-group">
                            <%= label_tag :old_password, '原密码 *', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= password_field_tag :old_password, '', class: 'form-control', 'data-bv-notempty' => true %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :password, '新密码 *', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= password_field_tag :password, '', class: 'form-control', 'data-bv-notempty' => true %>
                            </div>
                        </div>
                        <div class="form-group">
                            <%= label_tag :password_confirmation, '确认新密码 *', class: 'col-sm-2 control-label' %>
                            <div class="col-sm-10">
                                <%= password_field_tag :password_confirmation, '', class: 'form-control' %>
                            </div>
                        </div>
                        <div class="form_footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                            <button type="submit" class="btn btn-success"> 提交</button>
                        </div>
                    <% end %>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
