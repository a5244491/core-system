<%= search_form_for(@q, class: 'form-horizontal', role: 'form') do |f| %>
    <div class="form-group">
        <%= f.label :name_cont, '商户名', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.search_field :name_cont, class: 'form-control', placeholder: '请输入商户名'%>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :merchant_number_eq, '商户号', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.search_field :merchant_number_eq, class: 'form-control', placeholder: '请输入商户号'%>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :status_eq, '状态', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.select(:status_eq, options_for_select(store_status_text_hash.invert.merge('所有状态' => nil), @q.status_eq.to_s), {},  class: 'form-control')%>
        </div>
    </div>
<% end %>