<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">商户管理</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="modal" id="search_form_modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">输入查询条件</h4>
            </div>
            <div class="modal-body">
                <%= render 'search_form' %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <a type="button" class="btn btn-danger" href="<%= merchant_merchant_stores_path%>"><i class="fa fa-exclamation-circle"></i> 重置查询</a>
                <button type="button" class="btn btn-primary modal_submit"><i class="fa fa-fighter-jet"></i> 执行查询</button>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <button type="button" class="btn btn-success"><i class="fa fa-plus"></i> 新增商户</button>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#search_form_modal"><i class="fa fa-search-plus"></i> 查找商户</button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6"><%= page_entries_info(@merchant_stores, model: 'merchant_store') %></div>
                    <div class="col-sm-6" style="text-align: right"><%= will_paginate @merchant_stores, container: false %></div>
                </div>
                <br>

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>操作</th>
                            <th>名称</th>
                            <th>商户号</th>
                            <th>标准扣率</th>
                            <th>状态</th>
                            <th>是否接受通用红包</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'merchant_store', collection: @merchant_stores %>
                        </tbody>
                    </table>

                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

