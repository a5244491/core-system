<% content_for(:page_title, '收单机构管理') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-heading">
                <% if can? :create, Merchant::AcquirerOrg %>
                    <a type="button" class="btn btn-success" href="<%= new_merchant_acquirer_org_path %>"><i class="fa fa-plus"></i>
                        新增收单机构</a>
                <% end %>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>名称</th>
                            <th>代码</th>
                            <th>创建时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'acquirer', collection: @merchant_acquirer_orgs, as: :acquirer %>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @merchant_acquirer_orgs, model: 'acquirer'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

