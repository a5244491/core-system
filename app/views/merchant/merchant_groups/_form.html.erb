<%= form_for(@merchant_merchant_group, html: {class: 'form-horizontal', role: 'form', id: 'merchant_group_form'}) do |f| %>
    <div class="form-group">
        <%= f.label :name, '群组名 *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :name, class: 'form-control', 'data-bv-notempty' => true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :display_name, '展示名', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :display_name, class: 'form-control', 'data-bv-notempty' => true %>
        </div>
    </div>

    <div class="form_footer">
        <a class="btn btn-default" href="<%= system_platform_accounts_path %>">返回</a>
        <button type="reset" class="btn btn-danger">重置</button>
        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> 提交</button>
    </div>
<% end %>
