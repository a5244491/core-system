<% content_for(:page_title, '商户群组管理') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <% if can? :create, Merchant::MerchantGroup %>
                    <a type="button" class="btn btn-success" href="<%= new_merchant_merchant_group_path %>"><i class="fa fa-plus"></i>
                        新增商户群组</a>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @merchant_merchant_groups, model: 'merchant_group'} %>
                </div>
                <br>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>群组ID</th>
                            <th>展示名</th>
                            <th>群组名</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'merchant_group', collection: @merchant_merchant_groups, as: :merchant_group %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @merchant_merchant_groups, model: 'merchant_group'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

