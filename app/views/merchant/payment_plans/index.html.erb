<% content_for(:page_title, "支付计划 - #{@merchant_store.name}") %>
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>普通刷卡</b>
        </div>
        <!-- .panel-heading -->
        <div class="panel-body">
            <div class="panel panel-default">
                <div class="panel-heading"><%= render partial: 'payment_plan_panel_header', locals: {payment_plan: @none_payment_plan} %></div>
                <!-- .panel-heading -->
                <div class="panel-body">
                    默认的普通刷卡规则，商户适用扣率为<%= @merchant_store.standard_rate %>%
                </div>
                <!-- .panel-body -->
            </div>
        </div>
        <!-- .panel-body -->
    </div>
    <!-- /.panel -->

    <div class="panel panel-default">
        <div class="panel-heading">
            <b>刷卡打折</b>
            <%= link_to('创建', new_merchant_merchant_store_bank_discount_path(@merchant_store), class: 'btn btn-success') %>
        </div>
        <!-- .panel-heading -->
        <div class="panel-body">
            <%= render partial: 'payment_plan', collection: @bank_discount_plans, as: :payment_plan %>
        </div>
        <!-- .panel-body -->
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <b>积分返利</b>
        </div>
        <!-- .panel-heading -->
        <div class="panel-body">
            <%= render partial: 'payment_plan', collection: @credit_back_plans, as: :payment_plan %>
        </div>
        <!-- .panel-body -->
    </div>
    <!-- /.panel -->
</div>
