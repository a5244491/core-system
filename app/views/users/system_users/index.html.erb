<% content_for(:page_title, '运维用户管理') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <% if can? :create, Users::SystemUser %>
                    <a type="button" class="btn btn-success" href="<%= new_users_system_user_path %>"><i class="fa fa-plus"></i>
                        新增运维用户</a>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @users_system_users, model: 'system_user'} %>
                </div>
                <br>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>账号</th>
                            <th>姓名</th>
                            <th>角色</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'system_user', collection: @users_system_users, as: :system_user %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @users_system_users, model: 'system_user'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

