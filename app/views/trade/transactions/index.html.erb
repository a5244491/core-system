<% content_for(:page_title, '在途交易') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-heading">
            </div>
            <div class="panel-body">
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @trade_transactions, model: 'transaction_log'} %>
                </div>
                <br>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>操作</th>
                            <th>状态</th>
                            <th>银行卡</th>
                            <th>交易类型</th>
                            <th>创建时间</th>
                            <th>交易金额</th>
                            <th>商户名称</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'transaction', collection: @trade_transactions, as: :transaction %>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @trade_transactions, model: 'transaction_log'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

