<% content_for :page_title, "会员信息: #{@member_individual_credit_account.mobile}" %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <%= render partial: 'individual_credit_account_show_header' %>
            <div class="panel-body">
                <%= render partial: 'individual_credit_account_show_tab_header', locals: {index: 0} %>
                <%= render partial: 'shared/credit_account_table', locals: {credit_account: @member_individual_credit_account} %>
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        基本资料
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <label>姓名:</label> <%= @member_individual_credit_account.name %></li>
                                    <li class="list-group-item">
                                        <label>地址:</label> <%= @member_individual_credit_account.address %></li>
                                    <li class="list-group-item">
                                        <label>注册时间:</label> <%= datetime_text(@member_individual_credit_account.created_at) %>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <label>手机号:</label> <%= @member_individual_credit_account.mobile %></li>
                                    <li class="list-group-item">
                                        <label>消费次数:</label> <%= @member_individual_credit_account.consumption_times %>
                                    </li>
                                    <li class="list-group-item">
                                        <label>推荐人:</label> <%= referer_link(@member_individual_credit_account) %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

