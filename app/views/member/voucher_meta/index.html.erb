<% content_for(:page_title, '红包管理') %>
<div class="modal" id="search_form_modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">输入查询条件</h4>
            </div>
            <div class="modal-body">
                <%= render 'search_form' %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <a type="button" class="btn btn-danger" href="<%= member_voucher_meta_index_path %>"><i class="fa fa-exclamation-circle"></i>
                    重置查询</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-fighter-jet"></i> 执行查询</button>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <% if can? :create, Member::VoucherMeta %>
                    <a type="button" class="btn btn-success" href="<%= new_member_voucher_meta_path %>"><i class="fa fa-plus"></i>
                        新增红包</a>
                <% end %>
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#search_form_modal">
                    <i class="fa fa-search-plus"></i> 查找红包
                </button>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @member_voucher_meta, model: 'voucher_meta'} %>
                </div>
                <br>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>别名</th>
                            <th>可用店面</th>
                            <th>状态</th>
                            <th>面额</th>
                            <th>数量</th>
                            <th>每账户限制</th>
                            <th>发行方</th>
                            <th>结算方</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'voucher_meta', collection: @member_voucher_meta, as: :voucher_meta %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @member_voucher_meta, model: 'voucher_meta'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

