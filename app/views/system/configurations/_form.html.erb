<%= form_for(@system_configuration, html: {class: 'form-horizontal', role: 'form', id: 'configuration_form'}) do |f| %>
    <div class="form-group">
        <%= f.label :value, '参数值 *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :value, class: 'form-control', 'data-bv-notempty' => true %>
        </div>
    </div>
    <div class="form_footer">
        <a class="btn btn-default" href="<%= request.referrer %>">返回</a>
        <button type="reset" class="btn btn-danger">重置</button>
        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> 提交</button>
    </div>
<% end %>
