<% content_for(:page_title, '接入账号管理') %>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <% if can? :create, Users::SystemUser %>
                    <a type="button" class="btn btn-success" href="<%= new_system_platform_account_path %>"><i class="fa fa-plus"></i>
                        新增接入账号</a>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>账号</th>
                            <th>访问对象</th>
                            <th>访问码</th>
                            <th>状态</th>
                            <th>备注</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'platform_account', collection: @system_platform_accounts, as: :account %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

