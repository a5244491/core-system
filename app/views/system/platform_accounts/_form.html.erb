<%= form_for(@system_platform_account, html: {class: 'form-horizontal', role: 'form', id: 'platform_account_form'}) do |f| %>
    <div class="form-group">
        <%= f.label :account_name, '账号名 *', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :account_name, class: 'form-control', 'data-bv-notempty' => true %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :access_target, '访问对象', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.select(:access_target, target_list, {}, class: 'form-control') %>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :status, '状态', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.select(:status, status_list, {}, class: 'form-control') %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label :remark, '备注', class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
            <%= f.text_field :remark, class: 'form-control'%>
        </div>
    </div>
    <div class="form_footer">
        <a class="btn btn-default" href="<%= system_platform_accounts_path %>">返回</a>
        <button type="reset" class="btn btn-danger">重置</button>
        <button type="submit" class="btn btn-success"><i class="fa fa-check"></i> 提交</button>
    </div>
<% end %>
