<% content_for(:page_title, '系统日志') %>
<div class="modal" id="search_form_modal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">输入查询条件</h4>
            </div>
            <div class="modal-body">
                <%= render 'search_form' %>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <a type="button" class="btn btn-danger" href="<%= system_activity_logs_path %>"><i class="fa fa-exclamation-circle"></i>
                    重置查询</a>
                <button type="submit" class="btn btn-primary"><i class="fa fa-fighter-jet"></i> 执行查询</button>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <!-- /.panel-heading -->
            <div class="panel-heading">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#search_form_modal">
                    <i class="fa fa-search-plus"></i> 查询
                </button>
            </div>
            <div class="panel-body">
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @system_activity_logs, model: 'activity_log'} %>
                </div>
                <br>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>序号</th>
                            <th>时间</th>
                            <th>用户</th>
                            <th>来自</th>
                            <th>操作</th>
                            <th>目标</th>
                            <th>详细</th>
                        </tr>
                        </thead>
                        <tbody>
                        <%= render partial: 'activity_log', collection: @system_activity_logs, as: :log %>
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <%= render partial: 'shared/index_table_entries_info', locals: {collection: @system_activity_logs, model: 'activity_log'} %>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

